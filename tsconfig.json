{
  "compilerOptions": {
      "baseUrl": "./src",
      "rootDir": "./src",
      "module": "commonjs",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "ES6",
      "outDir": "dist"
  },

  "include": [
      "./src/**/*.ts",
      "./src/**/*.d.ts"
  ]
}
